<fieldset>
    <legend>Subject Alt Names</legend>
    {% for item in san|default([]) %}
    <p>
        <label>
            <select name="san-type-{{ loop.index0 }}">
                {% if item.type is same as 'dns' %}
                <option value="dns" selected>DNS</option>
                <option value="ip">IP</option>
                {% elseif item.type is same as 'ip' %}
                <option value="dns">DNS</option>
                <option value="ip" selected>IP</option>
                {% else %}
                <option value="dns">DNS</option>
                <option value="ip">IP</option>
                {% endif %}
            </select>
            {% if item.data|default(null) != null %}
            <input name="san-data-{{ loop.index0 }}" type="text" value="{{ item.data }}" required>
            {% else %}
            <input name="san-data-{{ loop.index0 }}" type="text" required>
            {% endif %}
        </label>
    </p>
    {% endfor %}
    <button hx-post="/generate/san"
            hx-swap="outerHTML"
            hx-target="closest fieldset">
        Add SAN
    </button>
</fieldset>
