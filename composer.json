{
    "name": "uma/autonode",
    "type": "project",
    "license": "MIT",
    "require": {
        "jelly/jelly": "dev-master",
        "nyholm/psr7": "^1.8",
        "symfony/yaml": "^6.3",
        "twig/twig": "^3.7",
        "uma/dic": "^3.0"
    },
    "require-dev": {
        "deployer/deployer": "^7.3",
        "friendsofphp/php-cs-fixer": "^3.27",
        "phpunit/phpunit": "^10.3",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "AutoNode\\": "src/"
        }
    },
    "scripts": {
        "serve": "@php -S localhost:8080 -t web cli-app.php",
        "lint": "@php vendor/bin/php-cs-fixer fix -v"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
